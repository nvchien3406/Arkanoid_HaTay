<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" styleClass="root" stylesheets="@settings.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GameController.Controllers.SettingsController">

     <Label layoutX="565.0" layoutY="262.0" styleClass="title" text="SETTINGS" />

     <HBox alignment="CENTER" layoutX="411.0" layoutY="313.0" spacing="15">
         <Label styleClass="label" text="Volume : " />
         <Slider fx:id="volumeSlider" max="1" min="0" prefWidth="250" value="0.8" />
         <Label fx:id="volumeLabel" styleClass="label" text="80%" />
     </HBox>

     <CheckBox fx:id="muteCheckBox" layoutX="567.0" layoutY="396.0" styleClass="label" text="Mute" />

                 <HBox alignment="CENTER" layoutX="531.0" layoutY="439.0" spacing="20">
         <Button onAction="#onSave" text="Save" />
         <Button onAction="#onBack" text="Back" />
     </HBox>
   <HBox layoutX="411.0" layoutY="350.0" prefHeight="25.0" prefWidth="390.0" spacing="7.0">
      <children>
         <Label text="AudioClip : " />
         <Slider fx:id="audioClipSlider" max="1.0" prefWidth="250.0" />
         <Label fx:id="audioClipLabel" text="0%" />
      </children>
   </HBox>

</AnchorPane>
